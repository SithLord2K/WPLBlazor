@attribute [StreamRendering]
<Bar Mode="BarMode.VerticalInline"
     CollapseMode="BarCollapseMode.Small"
     Breakpoint="Breakpoint.Desktop"
     NavigationBreakpoint="Breakpoint.Mobile"
     Background="Background.Dark"
     ThemeContrast="ThemeContrast.Dark"
     MenuToggleBehavior=BarMenuToggleBehavior.AllowSingleMenu
     Shadow="Shadow.Default">
    @* <BarToggler /> *@
    <BarMenu>
        <BarStart>
            <BarItem />
            <BarItem>
                <BarLink To="" Title="Home">
                    <BarIcon IconName="IconName.Home" />
                    Home
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="rosters" Title="Rosters">
                    <BarIcon IconName="IconName.Users" />
                    Rosters
                </BarLink>
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.ListUl" />
                        Standings
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem>
                            <BarLink To="team_standings" Title="Team Standings">
                                <BarIcon IconName="IconName.Users" />
                                Team
                            </BarLink>
                        </BarDropdownItem>
                        <BarDropdownItem>
                            <BarLink To="player_standings" Title="Player Standings">
                                <BarIcon IconName="IconName.User" />
                                Player
                            </BarLink>
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.Calendar" />
                        Schedules
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem>
                            <BarLink To="schedule" Title="Season Schedule">
                                <BarIcon IconName="IconName.Walking" />
                                Season
                            </BarLink>
                        </BarDropdownItem>
                        <BarDropdownItem>
                            <BarLink To="playoffs" Title="Playoffs Schedule">
                                <BarIcon IconName="IconName.Running" />
                                Playoffs
                            </BarLink>
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <AuthorizeView Roles="League_Admin, Super_User">
                <Divider />
                <BarItem>
                    <BarLink To="league_admin" Title="Admin">
                        <BarIcon IconName="IconName.UserTie" />
                        Admin
                    </BarLink>
                </BarItem>
            </AuthorizeView>
        </BarStart>
        <BarEnd>
            <Divider />
            <BarItem>
                <BarLink To="Downloads/Poolscoresheet.xls" Title="Download Scoresheet">
                    <BarIcon IconName="IconName.FileDownload" />
                    Download Scoresheet
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="changelog" Title="Changelog">
                    <BarIcon IconName="IconName.ExclamationCircle" />
                    Changelog
                </BarLink>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>

