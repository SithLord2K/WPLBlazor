@using WPLBlazor.Models
@inherits LayoutComponentBase
@inject IVersionProvider VersionProvider

<link href="_content/Blazorise.LoadingIndicator/blazorise.loadingindicator.css" rel="stylesheet" />

<Layout Sider>
    <Layout Display="Display.Flex">
        <LayoutHeader Fixed>
            <Bar Mode="BarMode.Horizontal"
                 Breakpoint="Breakpoint.Desktop"
                 NavigationBreakpoint="Breakpoint.Tablet"
                 Background="Background.Dark"
                 ThemeContrast="ThemeContrast.Dark"
                 Shadow="Shadow.Default"
                 Height="Height.Auto">
                <BarStart>
                    &nbsp;<img src="favicon.png" width="50" height="50" />
                    <BarLink To="">
                        <h2>Welland Pool League</h2>
                    </BarLink>
                </BarStart>
                <BarEnd>
                    <Login />
                </BarEnd>
            </Bar>
        </LayoutHeader>
        <Layout Sider>
            <LayoutSider>
                <LayoutSiderContent>
                    <VerticalMenuBar />
                </LayoutSiderContent>
            </LayoutSider>
            <Layout>
                <LayoutContent Padding="Padding.Is3">
                    <LoadingIndicator IndicatorVerticalPlacement="LoadingIndicatorPlacement.Middle" FadeIn>
                        <ChildContent>
                            @Body
                        </ChildContent>
                        <IndicatorTemplate>
                            <Animate Animation="Animations.FadeDownRight" Auto >
                                <Div>
                                    <SpinKit Type="SpinKitType.CircleFade" Size="100px" />
                                </Div>
                            </Animate>
                        </IndicatorTemplate>
                    </LoadingIndicator>
                </LayoutContent>
                <LayoutFooter>
                    <center>Site created and maintained by Chris Wiley on Golden Brothers 1</center>
                    <center>This site was made using Blazorise: @($"v{VersionProvider.MilestoneVersion}")</center>
                </LayoutFooter>
            </Layout>
        </Layout>
    </Layout>
</Layout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
