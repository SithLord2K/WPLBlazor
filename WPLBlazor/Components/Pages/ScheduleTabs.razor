@page "/schedules"
@attribute [StreamRendering]

<PageTitle>Schedules</PageTitle>

<Anchor id="top" />
<Tabs SelectedTab="@selectedTab" SelectedTabChanged="@OnSelectedTabChanged" RenderMode="TabsRenderMode.LazyLoad">
    <Items>
        <Tab Name="season_schedule">Season Schedule</Tab>
        <Tab Name="playoff_schedule">Playoff Schedule</Tab>
    </Items>
    <Content>
        <TabPanel Name="season_schedule">
            <Card>
                <CardBody>
                    <LeagueSchedule />
                </CardBody>
            </Card>
        </TabPanel>
        <TabPanel Name="playoff_schedule">
            <Card>
                <CardBody>
                    <LeaguePlayoffs />
                </CardBody>
            </Card>
        </TabPanel>
    </Content>
</Tabs>

@code {
    string selectedTab = "season_schedule";
    private Task OnSelectedTabChanged(string name)
    {
        selectedTab = name;

        return Task.CompletedTask;
    }

}
