                            </FieldBody>
                        </Field>
                        <Field>
                            <FieldBody>
                                <Button Color="Color.Success" Clicked="@AddTeamClicked">Save Team</Button>&nbsp;
                                <Button Color="Color.Danger" Type="ButtonType.Reset">Reset</Button>
                            </FieldBody>
                        </Field>
                    }
                </Field>
            </Form>
        </ModalBody>
    </ModalContent>
</Modal>
<!--Schedule Modal-->
