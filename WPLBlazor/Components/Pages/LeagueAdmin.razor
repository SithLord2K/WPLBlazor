                        </Field>
                        <Field ColumnSize="ColumnSize.IsFull">
                            <FieldLabel>Team Captain:</FieldLabel>
                            <FieldBody>
                                <Select TValue="int" SelectedValue="@addTeam.Captain_Player_Id" SelectedValueChanged="@TeamCaptainSelected">
